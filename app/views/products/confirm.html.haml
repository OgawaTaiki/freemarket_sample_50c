= render partial: "layouts/sub-header" 

%main.single-container
  .panel
    %section.panel__head 購入内容の確認
    .panel__inner
      %section.buy-content
        .item-info
          %h3.item-info__image
            =image_tag ('common/logo.svg'), alt: '商品画像', class: "confirm-image"
          %p.item-info__name
            = @products.name
          %p.item-info__price
            ="¥#{@products.price}"
            %span.item-info__price__shipping
              = @products.delivery_cost_i18n
          %ul.buy-price
            %li.buy-price__inner
              .buy-price__inner__cell 支払い金額
              .buy-price__inner__cell
                %span{data: {price: @products.price}}
                  = "¥#{@products.price}"
            %p
              =link_to "購入する", pay_path(current_user.id), class: "buy-confirm-btn"
      %hr.line
      %section.buy-content
        .user-info
          %h3.user-info__header 配送先
          %adress.user-info__text
            %p
              = "〒#{current_user.postal_code.to_s.insert(3, '-')}"
              %br
              = "#{current_user.prefecture_i18n} #{current_user.city}"
              %br
              = current_user.address
              %br
              = current_user.building
              %br
              =current_user.name
            %p.link-to-change.icon-arrow-r
              =link_to "変更する"
        %hr.line
        .card-info
          %h3.card-info__header 支払い方法
          %p.card-info__num
            = "**** **** ****"
          %p.card-info__date
            = "#●● / ●●"
          %p.link-to-change.icon-arrow-r
            =link_to "変更する"

= render partial: "layouts/sub-footer"
.header
  .header__container
    .header__container__search
      = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2927923569", class: "header__container__search__logo"
      = form_with local: true, class: "header__container__search__form" do |f|
        = f.text_field :keyword, class: "header__container__search__input", type: "search", name: "keyword", placeholder: "何かお探しですか？"
    .header__container__navigation
      .navigation-left
        .i.fa.fa-camera
        %ul#dropmenu
          %li
            = link_to 'カテゴリから探す', '#'
            %ul
              %li
                = link_to 'サブメニュー', '#'
              %li
                = link_to 'サブメニュー', '#'
        %ul#dropmenu
          %li
            = link_to 'ブランドから探す', '#'
            %ul
              %li
                = link_to 'シャネル', '#'
              %li
                = link_to 'ナイキ', '#'
      .navigation-right
        .navigation-right__registration
          = link_to "新規会員登録"
        .navigation-right__login
          = link_to "ログイン"